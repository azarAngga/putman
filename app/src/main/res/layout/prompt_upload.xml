<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/ln_prompt"
    android:background="@color/grey"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <!--<ImageView-->
            <!--android:layout_marginTop="-120dp"-->
            <!--android:layout_marginBottom="-180dp"-->
            <!--android:layout_marginRight="-90dp"-->
            <!--android:layout_marginLeft="-90dp"-->
            <!--android:id="@+id/img"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->


    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="230dp" />

    <!--<ImageView-->

        <!--android:id="@+id/img"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="410dp" />-->



<LinearLayout
    android:layout_marginTop="-65dp"
    android:id="@+id/lnm"
    android:layout_below="@id/img"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="85dp">


    <ImageView
        android:layout_marginLeft="-18dp"
        android:id="@+id/map"
        android:layout_width="110dp"
        android:layout_height="80dp"
        />

    <LinearLayout
        android:layout_marginLeft="-18dp"
        android:background="#7Feaeaea"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="80dp">

        <TextView
            android:text="-"
            android:gravity="top|center"
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeMaxTextSize="12sp"
            app:autoSizeStepGranularity="2sp" />

        <!--<TextView-->
            <!--android:textSize="4pt"-->
            <!--android:padding="5dp"-->
            <!--android:gravity="top"-->
            <!--android:text="-"-->
            <!--android:id="@+id/address"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="25dp" />-->

        <TextView
            android:textSize="4pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_transparant"
            android:gravity="center"
            android:text="Decimal" />

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="4pt"
                android:background="@drawable/stroke_transparant"
                android:text=" Latitude  "
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="4pt"
                android:id="@+id/d_latitude"
                android:layout_weight="1"
                android:background="@drawable/stroke_transparant"
                android:text=" -"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="4pt"
                android:background="@drawable/stroke_transparant"
                android:text=" Longitude "
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="4pt"
                android:id="@+id/d_longitude"
                android:layout_weight="1"
                android:background="@drawable/stroke_transparant"
                android:text=" -"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:gravity="center"
                android:textSize="4pt"
                android:id="@+id/txt_date"
                android:layout_weight="1"
                android:background="@drawable/stroke_transparant"
                android:text=" -"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

    <RelativeLayout
        android:layout_marginTop="0dp"
        android:layout_below="@id/img"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/deskripsi_foto_prompt"
            android:text="-"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:background="#eaeaea"
            android:layout_below="@id/deskripsi_foto_prompt"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>

</RelativeLayout>